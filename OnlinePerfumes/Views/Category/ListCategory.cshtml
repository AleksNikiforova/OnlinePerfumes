<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ИД</th>
            <th>Категория</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.Id</td>
                    <td>@cat.Name</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">Няма налични категории</td>
            </tr>
        }
    </tbody>
</table>

