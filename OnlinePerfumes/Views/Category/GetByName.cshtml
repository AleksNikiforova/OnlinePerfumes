@model OnlinePerfumes.Models.Category
<h2>Search Category by Name</h2>

<form asp-controller="Category" asp-action="GetByName" method="get">
    <div class="form-group">
        <label for="name">Enter Category Name:</label>
        <input type="text" id="name" name="name" class="form-control" placeholder="Category Name" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        @ViewData["Error"]
    </div>
}

@if (Model != null)
{
    <h3>Category Details</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
            </tr>
        </tbody>
    </table>
}

