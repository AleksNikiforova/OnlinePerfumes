@model OnlinePerfumes.Models.Category

<style>
    /* Style for the specific create category form */
    .create-category-form {
        /* max-width: 400px; */
        margin: 20px auto;
        padding: 20px;
        background-color: #f5f1ed; /* Light beige background - only for this form */
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(139, 69, 19, 0.1); /* Subtle brown shadow */
    }

        /* Legend styling */
        .create-category-form legend {
            font-size: 1.5rem;
            color: #8b4513; /* Saddle brown */
            font-weight: bold;
            margin-bottom: 15px;
            padding: 0 10px;
        }

    /* Margin bottom for form elements */
    .mb-3 {
        margin-bottom: 1.5rem;
    }

    /* Label styling */
    .form-label {
        display: block;
        color: #a0522d; /* Sienna brown */
        font-weight: 500;
        margin-bottom: 5px;
    }

    /* Input field styling */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #cd853f; /* Peru brown */
        border-radius: 5px;
        background-color: #fffaf0; /* Floral white for contrast */
        font-size: 1rem;
        color: #5c4033; /* Darker brown text */
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #8b4513; /* Darker brown on focus */
            box-shadow: 0 0 5px rgba(139, 69, 19, 0.3);
        }

        /* Placeholder text styling */
        .form-control::placeholder {
            color: #a9a19a;
            opacity: 0.7;
        }

    /* Button styling */
    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #8b4513; /* Saddle brown */
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #a0522d; /* Lighter brown on hover */
        }

    /* Primary button specific styling */
    .btn-primary {
        background-color: #8b4513;
    }

        .btn-primary:hover {
            background-color: #a0522d;
        }
}
</style>
<form asp-action="CreateCategory" asp-controller="Category" method="post" class="create-category-form">

    <legend>Създай категория</legend>

    <div class="mb-3">
        <label class="form-label" asp-for="Name">Name of category</label>
        <input type="text" id="nameOfCategory" class="form-control" name="name" asp-for="Name" placeholder="Name of category">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>

