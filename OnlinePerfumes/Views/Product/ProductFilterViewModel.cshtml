@model ProductFilterViewModel
<h2>Търсене на продукти</h2>

<form asp-action="Index" method="get" class="mb-4">
    <div class="form-group">
        <label for="CategoryId">Категория</label>
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
            <option value="">Всички категории</option>
        </select>
    </div>

    <div class="form-group">
        <label for="MinPrice">Минимална цена</label>
        <input type="number" asp-for="MinPrice" class="form-control" step="0.01" />
    </div>

    <div class="form-group">
        <label for="MaxPrice">Максимална цена</label>
        <input type="number" asp-for="MaxPrice" class="form-control" step="0.01" />
    </div>

    <div class="form-group">
        <label for="SearchName">Въведи име на парфюм</label>
        <input type="text" asp-for="SearchName" class="form-control"  />
    </div>
    <button asp-action="Index" asp-controller="Product" type="submit" class="btn btn-primary" formmethod="get">
        Submit
    </button>
</form>
