@{
}
@model IEnumerable<OnlinePerfumes.Models.Product>
@{
    ViewBag.Title = "Product List";
}
<h2>Product List</h2>

<div>
    <a href="/Product/Add" class="btn btn-primary">Add New Product</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.CategoryId</td>
                <td>
                    <a type="button" class="btn btn-success" asp-action="Update" asp-controller="Product" asp-route-id="@product.Id">Update</a>
                    <form method="post" asp-controller="Product"asp-action="Delete">
                        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
 </table>
