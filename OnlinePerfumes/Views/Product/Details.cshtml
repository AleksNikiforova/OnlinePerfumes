@model Product


<div class="product-details">
    <h1>@Model.Name</h1>

    <img src="@Model.ImageFile" alt="@Model.Name" class="product-image" />

    <p><strong>Категория:</strong> @Model.Category.Name</p>
    <p><strong>Цена:</strong> @Model.Price лв.</p>
    <p><strong>Описание:</strong> @Model.Description</p>

    <a asp-action="Index" class="btn btn-primary">Обратно към всички парфюми</a>
</div>

