@model OnlinePerfumes.Models.ViewModels.Product.ProductAllViewModel

<h1>Добави нов парфюм</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Име на парфюм</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Price">Цена</label>
        <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" min="0.01" max="100000" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="Aroma">Аромат</label>
        <input type="text" class="form-control" id="Aroma" name="Aroma" value="@Model.Aroma" />
    </div>

    <div class="form-group">
        <label for="CategoryId">Категория</label>
        <select class="form-control" id="CategoryId" name="CategoryId">
            @foreach (var category in ViewData["Categories"] as List<Category>)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="image">Снимка</label>
        <input type="file" class="form-control" id="image" name="image" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Запази</button>
</form>

    

