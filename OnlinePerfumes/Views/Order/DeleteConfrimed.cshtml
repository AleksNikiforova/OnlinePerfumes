@model OnlinePerfumes.Models.ViewModels.Order.OrderDeleteConfrimedViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Deletion</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #212529;
            padding: 20px;
        }

        .delete-confirm-card {
            background-color: white;
            border: 1px solid #dee2e6;
            border-radius: 12px;
            width: 50%;
            margin: 0 auto;
            padding: 30px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .delete-confirm-card h1 {
                color: #F44336; /* Red for warning */
                font-size: 1.8em;
                margin-bottom: 20px;
            }

            .delete-confirm-card p {
                font-size: 1em;
                margin-bottom: 15px;
            }

            .delete-confirm-card .order-details {
                margin: 20px 0;
                padding: 15px;
                background-color: #f8f9fa;
                border-radius: 8px;
                border: 1px solid #dee2e6;
                text-align: left;
                font-size: 0.95em;
            }

                .delete-confirm-card .order-details p {
                    margin: 8px 0;
                }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1em;
            font-weight: bold;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-delete {
            background-color: #F44336; /* Red for delete button */
        }

            .btn-delete:hover {
                opacity: 0.8;
            }

        .btn-cancel {
            background-color: #4CAF50; /* Green for cancel button */
        }

            .btn-cancel:hover {
                opacity: 0.8;
            }
    </style>
</head>
<body>
    <div class="delete-confirm-card">
        <h1>Confirm Deletion</h1>
        <p>Are you sure you want to delete this order?</p>

        <div class="order-details">
            <p><strong>Product Name:</strong> @Model.ProductName</p>
            <p><strong>Customer Name:</strong> @Model.CustomerName</p>
            <p><strong>Order Date:</strong> @Model.OrderDate</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>Category:</strong> @Model.CategoryName</p>
        </div>

        <div class="btn-group">
            <a asp-controller="Order" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-delete">Delete</a>
            <a asp-action="All" asp-controller="Order" class="btn btn-cancel">Cancel</a>
        </div>
    </div>
</body>
</html>
