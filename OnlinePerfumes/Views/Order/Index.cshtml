@{
}
@model IEnumerable<Order>
<h2>Order</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Products</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orders in Model)
        {
            <tr>
                <td>@orders.OrderDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <ul>
                        @foreach (var item in orders.OrderProducts)
                        {
                            <li>@item.Product.Name</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

