@model OnlinePerfumes.Models.ViewModels.Order.OrderEditViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Order</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #212529;
            padding: 20px;
        }

        .edit-order-card {
            background-color: white;
            border: 1px solid #dee2e6;
            border-radius: 12px;
            width: 60%;
            margin: 0 auto;
            padding: 30px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

            .edit-order-card h1 {
                text-align: center;
                color: #4CAF50; /* Green for title */
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
            color: #4CAF50; /* Green for labels */
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            font-size: 1em;
            margin-top: 5px;
            color: #212529;
        }

            .form-control:focus {
                border-color: #4CAF50;
                outline: none;
            }

        .btn-submit {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: #4CAF50; /* Green for submit button */
            color: white;
            border: none;
            text-align: center;
            font-size: 1.2em;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-submit:hover {
                opacity: 0.8;
            }

        .back-button {
            display: block;
            width: 200px;
            margin: 20px auto;
            padding: 12px;
            background-color: #FFC107; /* Yellow for back button */
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
        }

            .back-button:hover {
                opacity: 0.8;
            }
    </style>
</head>
<body>
    <div class="edit-order-card">
        <h1>Edit Order</h1>

        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label for="OrderDate" class="form-label">Order Date</label>
                <input type="date" asp-for="OrderDate" class="form-control" />
            </div>

            <div class="form-group">
                <label for="ProductId" class="form-label">Select Product</label>
                <select asp-for="ProductId" asp-items="Model.ProductsList" class="form-control">
                    <option value="">Select a Product</option>
                </select>
            </div>

            <button type="submit" class="btn-submit">Save Changes</button>
        </form>

        <a asp-action="All" asp-controller="Order" class="back-button">Back to Orders</a>
    </div>
</body>
</html>

