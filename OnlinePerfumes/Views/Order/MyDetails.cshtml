@model List<OnlinePerfumes.Models.ViewModels.Customer.CustomerOrderDetailsViewModel>

@{
    ViewData["Title"] = "Моите Поръчки";
}

<h2>Моите Поръчки</h2>

@if (Model.Any())
{
    @foreach (var order in Model)
    {
        <div class="card mt-3">
            <div class="card-header">
                <strong>Поръчка № @order.OrderId</strong> - Дата: @order.OrderDate.ToString("dd/MM/yyyy")
                <span class="badge bg-info">@order.Status</span>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Продукт</th>
                            <th>Аромат</th>
                            <th>Категория</th>
                            <th>Цена</th>
                            <th>Количество</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in order.OrderProducts)
                        {
                            <tr>
                                <td>@product.ProductName</td>
                                <td>@product.Aroma</td>
                                <td>@product.CategoryName</td>
                                <td>@product.Price.ToString("C")</td>
                                <td>@product.Quantity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}
else
{
    <p class="text-muted">Нямате направени поръчки.</p>
}



<a asp-action="Index"  asp-controller="Product" class="btn btn-secondary mt-3">Back to Products</a>
